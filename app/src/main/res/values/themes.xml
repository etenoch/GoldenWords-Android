<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools" xmlns:android="http://schemas.android.com/apk/res/android">
    <color name="gwYellow">#FFc107</color>
    <color name="gwYellowDark">#FFa000</color>
    <color name="white">#FFFFFF</color>

    <style name="ActionBarTheme" parent="@style/Theme.AppCompat.NoActionBar">
        <item name="android:actionBarStyle">@style/MyActionBar</item>
        <item name="actionBarStyle">@style/MyActionBar</item>
        <item name="windowActionBar">false</item>
    </style>

    <style name="MyActionBar" parent="@style/Widget.AppCompat.Light.ActionBar.Solid.Inverse">

        <item name="android:background">@color/gwYellow</item>
        <item name="background">@color/gwYellow</item>
        <item name="colorPrimary">@color/gwYellow</item>
        <item name="colorPrimaryDark">@color/gwYellowDark</item>
        <item name="titleTextStyle">@style/MyActionBarTitleText</item>
        <item name="android:actionMenuTextColor">@style/MyActionBarMenuText</item>
    </style>

    <style name="MyActionBarTitleText" parent="@style/TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="MyActionBarMenuText" parent="@style/TextAppearance.AppCompat.Widget.ActionBar.Menu">
        <item name="android:textColor">@color/white</item>
    </style>

</resources>